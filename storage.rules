rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Chat-tiedostot - salli lukeminen ja kirjoittaminen
    match /chat-files/{allPaths=**} {
      allow read, write: if true;
    }
    
    // Kaikki muut - est√§
    match /{allPaths=**} {
      allow read, write: if false;
    }
  }
}
