# Environment variables for ChatNest

# OpenAI API Key for content moderation
# Get your API key from https://platform.openai.com/api-keys
VITE_OPENAI_API_KEY=your_openai_api_key_here

# ImgBB API Key for image uploads (24h auto-delete)
# Get your API key from https://api.imgbb.com/
VITE_IMGBB_API_KEY=your_imgbb_api_key_here

# Moderoinnin tasot:
# strict = Tiukka (sexual: 0.1, violence: 0.3, harassment: 0.4)
# normal = Normaali (sexual: 0.4, violence: 0.8, harassment: 0.9) [oletus]
# relaxed = Salliva (sexual: 0.7, violence: 0.9, harassment: 0.95)
VITE_MODERATION_LEVEL=normal

# Bannien herkkyys:
# strict = 3 tekstirikkomusta→banni, 48h temp-banni, 2. banni=ikuinen
# normal = 5 tekstirikkomusta→banni, 24h temp-banni, 3. banni=ikuinen [oletus]
# relaxed = 10 tekstirikkomusta→banni, 12h temp-banni, 5. banni=ikuinen
VITE_BAN_SENSITIVITY=normal

# Debug-mode bannijärjestelmän testaamiseen (true/false)
VITE_DEBUG_MODERATION=false

# Supabase configuration for Google OAuth
VITE_SUPABASE_URL=https://your_project.supabase.co
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# Firebase configuration
VITE_FIREBASE_API_KEY=your_firebase_api_key
VITE_FIREBASE_AUTH_DOMAIN=your_project.firebaseapp.com
VITE_FIREBASE_PROJECT_ID=your_project_id
VITE_FIREBASE_STORAGE_BUCKET=your_project.appspot.com
VITE_FIREBASE_MESSAGING_SENDER_ID=your_sender_id
VITE_FIREBASE_APP_ID=your_app_id